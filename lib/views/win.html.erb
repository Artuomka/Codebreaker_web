<!DOCTYPE html>
<html lang="en" class="mdl-js">
<%= view "components/header.html.erb" %>
<body>
<section id="introduction">
  <div class="container">
    <div class="row fill-viewport align-items-center justify-content-center">
      <div class="col-12 col-md-6">
        <div class="row">
          <div class="col-md-auto">
            <h1 class="text-white title inline-block"><%= I18n.t(:codebreaker) %></h1>
          </div>
        </div>
        <div class="row">
          <div class="col button">
            <button type="button" class="btn btn-primary" disabled>
              <%= I18n.t(:level)%>:
              <span class="badge badge-light">
                    <%= user_level %>
                  </span>
            </button>
            <button type="button" class="btn btn-primary" disabled>
              <%= I18n.t(:attempts_left)%>:
              <span class="badge badge-light">
                    <%= user_attempts %>/<%= Codebreaker::Entities::Game::DIFFICULTIES[user_level.to_sym][:attempts]%>
                  </span>
            </button>
            <button type="button" class="btn btn-primary" disabled>
              <%= I18n.t(:hints_left)%>:
              <span class="badge badge-light">
                    <%= user_hints %>/<%= Codebreaker::Entities::Game::DIFFICULTIES[user_level.to_sym][:hints]%>
                  </span>
            </button>
          </div>
        </div>
        <hr class="mb-4">
        <div class="row">
          <div class="text-center">
            <div class="text-center">
              <h3 class="text-white">
                <%= I18n.t(:win_game_message, name: user_name) %>
              </h3>
            </div>
            <img src="assets/images/won.gif" class="img-fluid" alt="You won the game!">
          </div>
        </div>
        <hr class="mb-4">
        <a class="btn btn-primary btn-lg" href="/" role="button">
          <%= I18n.t(:play_again_button) %>
        </a>
        <a class="btn btn-success btn-lg float-right" href="/stats" role="button">
          <%= I18n.t(:statistics_button) %>
        </a>
      </div>
    </div>
  </div>
</section>
</body>
</html>